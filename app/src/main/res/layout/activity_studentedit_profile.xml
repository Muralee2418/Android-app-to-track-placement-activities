<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashcolor"
    tools:context="com.example.muralli.lifecycle.StudentDetails.StudentProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/ring"
        android:alpha="51"
        android:orientation="vertical">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@mipmap/studentprofilepic"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25dp"
            android:textColor="@color/purewhite"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/studeditname"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Roll No"
            android:textSize="15dp"
            android:textColor="@color/purewhite"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/studeditroll1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/purewhite"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="15dp"
                android:textColor="@color/purewhite"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/studeditgender"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="85dp"
        android:gravity="center"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="180dp"
        android:orientation="horizontal"
        android:background="@color/TxtClr">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:paddingTop="2dp"
                android:text="Placement Willing ?"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/dashcolor"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/stdeditplacemenstatus"
                android:text="Yes"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="@color/purewhite"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:paddingTop="2dp"
                android:text="Fastrack"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/dashcolor"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/stdeditfastrackstatus"
                android:text="Yes"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="@color/purewhite"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:paddingTop="2dp"
                android:text="Arrear"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/dashcolor"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/studenteditarear1"
                android:text="0"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="@color/purewhite"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="260dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="30dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/studentemail"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="adbc@gmail.com"
                android:textColor="@color/TxtClr"
                android:layout_gravity="center"
                android:id="@+id/studenteditemail"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="30dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/studentphone"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9876543210"
                android:textColor="@color/TxtClr"
                android:layout_gravity="center"
                android:id="@+id/studenteditphone"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="100dp"
                android:layout_gravity="center"
                android:src="@mipmap/studentcall"
                android:id="@+id/studentprofilecall"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make Call"
                android:layout_gravity="center"
                android:textColor="@color/TxtClr"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="30dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/studentskill"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="java, Python, bigdata"
                android:textColor="@color/TxtClr"
                android:layout_gravity="center"
                android:id="@+id/studenteditskill"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Placed in"
                    android:gravity="center"
                    android:textColor="@color/TxtClr"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/studenteditcompany"
                    android:text="Company"
                    android:gravity="center"
                    android:textColor="@color/purewhite"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Doing Intern in"
                    android:gravity="center"
                    android:textColor="@color/TxtClr"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/studenteditinterncompany"
                    android:text="Company"
                    android:gravity="center"
                    android:textColor="@color/purewhite"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:text="Update"
            android:id="@+id/studenteditbutton"
            android:background="@color/TxtClr"/>
    </LinearLayout>


</RelativeLayout>
