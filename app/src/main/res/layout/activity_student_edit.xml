<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashcolor"
    tools:context="com.example.muralli.lifecycle.StudentDetails.StudentProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/ring"
        android:orientation="vertical">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@mipmap/studentprofilepic"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25dp"
            android:textColor="@color/purewhite"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/studeditname"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Roll No"
                android:textSize="15dp"
                android:textColor="@color/purewhite"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/studeditroll1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/purewhite"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="15dp"
                android:textColor="@color/purewhite"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/studeditgender"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="85dp"
        android:gravity="center"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="180dp"
        android:orientation="horizontal"
        android:background="@color/cardview"
        android:id="@+id/linearLayout">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:paddingTop="2dp"
                android:text="Placement Willing ?"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/dashcolor"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/stdeditplacemenstatus"
                android:text="Yes"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="@color/purewhite"
                android:entries="@array/Status"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:paddingTop="2dp"
                android:text="Fastrack"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/dashcolor"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/stdeditfastrackstatus"                android:text="Yes"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:entries="@array/Status"
                android:textColor="@color/purewhite"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:paddingTop="2dp"
                android:text="Arrear"
                android:id="@+id/studentprofilearear"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/dashcolor"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="0"
                android:id="@+id/studenteditarear3"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="@color/purewhite"/>

        </LinearLayout>
    </LinearLayout>
    <ScrollView

        android:layout_height="300dp"
        android:layout_width="fill_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingTop="50dp"
        android:layout_gravity="center"
        android:id="@+id/ll_studentEdit_data"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="20dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/studentemail"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="adbc@gmail.com"
                android:textColor="@color/redish"
                android:layout_gravity="center"
                android:id="@+id/studenteditemail"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="20dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/studentphone"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9876543210"
                android:textColor="@color/redish"
                android:layout_gravity="center"
                android:id="@+id/studenteditphone"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="100dp"
                android:layout_gravity="center"
                android:background="@color/TxtClr"
                android:src="@mipmap/studentcall"
                android:id="@+id/studentprofilecall"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make Call"
                android:layout_gravity="center"
                android:textColor="@color/redish"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="20dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/studentskill"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="java, Python, bigdata"
                android:textColor="@color/redish"
                android:layout_gravity="center"
                android:id="@+id/studenteditskill"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Place in"
                    android:gravity="center"
                    android:textColor="@color/redish"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/studenteditcompany"
                    android:text="Company"
                    android:gravity="center"
                    android:textColor="@color/purewhite"
                    android:textStyle="bold"
                    android:focusable="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Second Company"
                    android:gravity="center"
                    android:textColor="@color/redish"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/studenteditsecondcompany"
                    android:text="Company"
                    android:gravity="center"
                    android:focusable="false"
                    android:textColor="@color/purewhite"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Doing Intern in"
                android:gravity="center"
                android:textColor="@color/redish"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/studenteditinterncompany"
                android:text="Company"
                android:gravity="center"
                android:textColor="@color/purewhite"
                android:textStyle="bold"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Intern From"
                    android:gravity="center"
                    android:textColor="@color/redish"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/studenteditinternfrom"
                    android:text="Company"
                    android:gravity="center"
                    android:textColor="@color/purewhite"
                    android:focusable="false"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Intern To"
                    android:gravity="center"
                    android:textColor="@color/redish"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/studenteditinternto"
                    android:text="Company"
                    android:gravity="center"
                    android:textColor="@color/purewhite"
                    android:focusable="false"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Update"
        android:background="@color/TxtClr"
        android:id="@+id/updatebutton"
        android:layout_below="@+id/scrollView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

