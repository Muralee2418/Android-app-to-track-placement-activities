<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muralli.lifecycle.Taskstodo.EditTask">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/dashcolor">
            <EditText
                android:id="@+id/edittask_name"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="Name of the Task"
                android:textColorHint="@color/TxtClr"
                android:textColor="@color/TxtClr"/>
            <EditText
                android:id="@+id/edittask_frm_dt"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="Task From date"
                android:textColorHint="@color/TxtClr"
                android:textColor="@color/TxtClr"
                android:focusable="false"/>
            <EditText
                android:id="@+id/edittask_to_dt"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="Task To date"
                android:textColorHint="@color/TxtClr"
                android:textColor="@color/TxtClr"
                android:focusable="false"/>
            <EditText
                android:id="@+id/addedit_year"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="year"
                android:inputType="number"
                android:visibility="gone"
                android:textColorHint="@color/TxtClr"
                android:textColor="@color/TxtClr"/>


            <Button
                android:id="@+id/edittask_butn"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@color/TxtClr"
                android:text="Update"
                android:textColor="@color/dashcolor"/>
        </LinearLayout>



    </RelativeLayout>


